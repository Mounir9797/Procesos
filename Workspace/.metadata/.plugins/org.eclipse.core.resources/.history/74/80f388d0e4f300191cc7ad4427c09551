package ejercicios;

public class Productor extends Thread{

	private int cantidad;
	private int n;
	private Monitor m;
	
	
	public Productor(int n,Monitor m, int cantidad) {
		
		this.cantidad= cantidad;
		this.n=n;
		this.m=m;
		this.setName("P "+n);
	}
	
	public Productor(int n,Monitor m) {
		
		this(n, m, 1);
	}

	public void run() {
		m.entrar(cantidad);
		m.actualizar(cantidad);
		m.salir();
	}

}//class
